- model_class = Task
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @task.user_id
%p
  %strong= model_class.human_attribute_name(:item) + ':'
  %br
  = @task.item
%p
  %strong= model_class.human_attribute_name(:is_complete) + ':'
  %br
  = @task.is_complete
%p
  %strong= model_class.human_attribute_name(:deadline) + ':'
  %br
  = @task.deadline
%p
  %strong= model_class.human_attribute_name(:location) + ':'
  %br
  = @task.location

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tasks_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_task_path(@task), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), task_path(@task), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
