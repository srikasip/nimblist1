- model_class = Task

= form_for @task, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :item, :class => 'control-label'
    .controls
      = f.text_field :item, :class => 'text_field'
  .control-group
    = f.label :is_complete, :class => 'control-label'
    .controls
      = f.text_field :is_complete, :class => 'text_field'
  .control-group
    = f.label :deadline, :class => 'control-label'
    .controls
      = f.text_field :deadline, :class => 'text_field'
  .control-group
    = f.label :location, :class => 'control-label'
    .controls
      = f.text_field :location, :class => 'text_field'
  .form-actions.btn-group
    = f.submit "Update", :class => 'btn btn-primary'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), task_path(@task), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), tasks_path, :class => 'btn'