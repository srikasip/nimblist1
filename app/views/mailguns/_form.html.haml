= form_for @mailgun, :url=>{:controller=>'email_handler', :action=>'post', :method=>:post} do |f|
  - if @mailgun.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mailgun.errors.count, "error")} prohibited this mailgun from being saved:"
      %ul
        - @mailgun.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sender
    = f.text_field :sender
  .field
    = f.label :recipient
    = f.text_field :recipient
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :stripped_text
    = f.text_area :stripped_text
  .actions
    = f.submit 'Save'
